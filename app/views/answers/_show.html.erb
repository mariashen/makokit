
<li id="answer_<%= answer.id %>" class="timeline-inverted <%= "dependent_instruction_#{answer.instruction.id}" %>">
    <% if answer.correct? %>
        <div class="timeline-badge success"><i class="fa fa-check"></i>
        </div>
    <% elsif answer.incorrect? %>  
        <div class="timeline-badge warning"><i class="fa fa-times"></i>
        </div>
    <% else %>  
        <div class="timeline-badge info"><i class="fa fa-question"></i>
        </div>
    <% end %>      


    <div class="timeline-panel">
        <div class="timeline-heading">
            <h4 class="timeline-title">Answer <%= answer.id %></h4>
        </div>
        <div class="timeline-body">

            <div class="row">
                <div class="col-lg-12">
                    <% if !answer.text.blank? %>
                        <p><%= answer.text %></p>
                    <% end %>
                    <% if !answer.image_url.blank? %>
                        <img src="<%= answer.image_url %>">
                    <% end %>
                    </br>
                    <span class="pull-right text-muted small"><em><%= link_to "edit", edit_answer_path(answer), remote: true %> / <%= link_to "delete", answer_path(answer), method: :delete, remote: true %></em></span> 
                     </br>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12" id="answer_<%= answer.id %>_jump">
                    <div class="<%= "jump_dependent_answer_to_instruction_#{answer.next_instruction.id}" if answer.next_instruction %>">
                    <% if !answer.jump.blank? %>
                        <span class="pull-right text-muted small"><em><a href="#instruction_<%= answer.next_instruction.id %>">Jumps to instruction <%= answer.next_instruction.id %></a> ( <%= link_to "change", edit_answer_jump_path(answer.jump), remote: true %> / <%= link_to "delete", answer_jump_path(answer.jump), method: :delete, remote: true %> )</em></span>
                    <% else %>
                        <span class="pull-right text-muted small"><em>Goes to next instruction if selected (<%= link_to "change", new_answer_answer_jump_path(answer), remote: true %>)</em></span>
                    <% end %>
                </div>
            </div>

        </div>
    </div>

</li>

