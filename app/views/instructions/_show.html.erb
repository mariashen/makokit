<li id="instruction_<%= instruction.id %>">
    <div class="timeline-badge info"><i class="fa fa-graduation-cap"></i>
    </div>
    <div class="timeline-panel">
        <div class="timeline-heading">
            <h4 class="timeline-title">Instruction <%= instruction.id %></h4>
        </div>
        <div class="timeline-body">
            <div class="row">
                <div class="col-lg-12">
                    <% if !instruction.text.blank? %>
                        <p><%= instruction.text %></p>
                    <% end %>
                    <% if !instruction.image_url.blank? %>
                        <img src="<%= instruction.image_url %>">
                    <% end %>
                    <% if !instruction.video_url.blank? %>
                        <p>Play video at <%= instruction.video_url %></p>
                    <% end %>
                    <hr>
                    <span class="pull-right text-muted small"><em><%= link_to "Edit", edit_instruction_path(instruction), remote: true %> / <%= link_to "Add answer", new_instruction_answer_path(instruction), remote: true %> / <%= link_to "Delete", instruction_path(instruction), method: :delete, remote: true, data: {confirm: "Are you sure?"} %></em></span>
                </div>
            </div>
        </div>
    </div>
</li>