

<div class="new_answer">
<hr>

<span class="pull-right text-muted small"><em><a href="#instruction_<%= @instruction.id %>" onclick="$('#instruction_<%= @instruction.id %> .new_answer').remove();">cancel</a></em></span>

<p class="help-block">Add an answer</p>

<%= form_for @answer, url: instruction_answers_path(@instruction), remote: true do |f| %>
    <div class="form-group">
        <%= f.label :text, class: "control-label" %>
        <%= f.text_field :text, class: "form-control"  %>
        <p class="help-block small">Try to stay below 5 words!</p>
    </div>
    <div class="form-group">
        <%= f.label :image_url, class: "control-label" %>
        <%= f.text_field :image_url, class: "form-control"  %>
        <p class="help-block small">Or add an image here</p>
    </div>

    <div class="form-group">
        <%= f.label :correct, 'Correct answer', class: "control-label" %>
        <%= f.radio_button(:correct, true) %>
    </div>  
    <div class="form-group">
        <%= f.label :correct, 'Wrong answer', class: "control-label" %>
        <%= f.radio_button(:correct, false) %>
    </div>  
    <p class="help-block text-muted small">Displays a positive visual feeback when the correct answer is chosen</p>


    <div class="form-group">
        <%= f.submit 'Add', class: 'btn btn-success' %>
    </div>
<% end %>


</div>

