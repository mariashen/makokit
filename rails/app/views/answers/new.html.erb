<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">New answer</h1>
    </div>

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <%= @instruction.text  %>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">

                            <%= form_for @answer, url: instruction_answers_path(@instruction) do |f| %>

                                <div class="form-group">
                                    <%= f.label :text, class: "control-label" %>
                                    <%= f.text_field :text, class: "form-control"  %>
                                    <p class="help-block">Try to stay below 5 words!</p>
                                </div>
                                <div class="form-group">
                                    <%= f.label :image_url, class: "control-label" %>
                                    <%= f.text_field :image_url, class: "form-control"  %>
                                    <p class="help-block">Or add an image here</p>
                                </div>

                                <div class="form-group">
                                    <%= f.label :correct, 'Correct answer', class: "control-label" %>
                                    <%= f.radio_button(:correct, true) %>
                                </div>  
                                <div class="form-group">
                                    <%= f.label :correct, 'Wrong answer', class: "control-label" %>
                                    <%= f.radio_button(:correct, false) %>
                                </div>  
                                <div class="form-group">
                                    <%= f.label :correct, 'Neither', class: "control-label" %>
                                    <%= f.radio_button(:correct, nil) %>
                                </div>  
                                <p class="help-block text-muted small">This display a different visual feeback when the answer is chosen</p>

                            
                                <div class="form-group">
                                    <%= f.submit 'Add', class: 'btn btn-success' %>
                                </div>
                            <% end %>

                        </div>
                        <!-- /.col-lg-6 (nested) -->

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.col-lg-12 -->
</div>

