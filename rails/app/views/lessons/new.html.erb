<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">New Lesson</h1>
    </div>

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Enter Basic Info for this Lesson
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">


                            <%= form_for @lesson do |f| %>

                                <div class="form-group">
                                    <%= f.label :name, class: "control-label" %>
                                    <%= f.text_field :name, class: "form-control"  %>
                                    <p class="help-block">What your lesson teaches in 5 words!</p>
                                </div>
                                <div class="form-group">
                                    <%= f.label :category, class: "control-label" %>
                                    <%= f.text_field :category, class: "form-control"  %>
                                    <p class="help-block">To regroup it with similar ones and make better suggestions to your students</p>
                                </div>
                                <div class="form-group">
                                    <%= f.label :description, class: "control-label" %>
                                    <%= f.text_field :description, class: "form-control"  %>
                                    <p class="help-block">How is your lesson going to be exciting?</p>
                                </div>

                                <div class="form-group">
                                    <%= f.label :image_url, "Cover image url (650x350)", class: "control-label" %>
                                    <%= f.text_field :image_url, class: "form-control"  %>
                                    <p class="help-block">How is your lesson going to be exciting?</p>
                                </div>

                                <div class="form-group">
                                    <%= f.submit 'Save', class: 'btn btn-success' %>
                                </div>
                            <% end %>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.col-lg-12 -->
</div>

